<!DOCTYPE html>
<html>
<head>
    <title>E-Mails</title>
</head>
<body>
    {{#each mails}}
        <div class='mail'>
            <div class='header'>
                <table>
                    <tr>
                        <th>Subject</th>
                        <td>{{subject}}</td>
                    </tr>
                    <tr>
                        <th>From</th>
                        <td>{{#each from}}{{name}} ({{address}}){{/each}}</td>
                    </tr>
                    <tr>
                        <th>To</th>
                        <td>{{#each to}}{{name}} ({{address}}), {{/each}}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{formatDate date}}</td>
                    </tr>
                </table>
            </div>
            <div class='message'>{{{html}}}</div>
        </div>
    {{/each}}
</body>
</html>
